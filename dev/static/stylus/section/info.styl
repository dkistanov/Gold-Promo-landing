.offer__bot {
    background: #f4f4f4;
    padding-top: 36px;
    padding-bottom: 36px;
}

.offer__content-wrp {
    padding-right: 7%;
}

.offer__desc span {
    display: inline-block;
    line-height: 1.3;
    font-size: 18px;
}

a.offer__link {
    padding-top: 25px;
    display: block;
    text-decoration: underline;
    font-size: 18px;
    padding-bottom: 17px;
}

.offer__note {
    max-width: 450px;
    font-size: 14px;
    line-height: 1.23;
    margin-bottom: 27px;
}

.offer__list {
    display: flex;
}

.offer__item {margin-right: 9%;}

.offer__item:last-child {
    margin: 0;
}

section.offer {
}

.offer__item-img {
    display: flex;
    margin-bottom: 16px;
    height: 63px;
    padding-left: 48px;
}

.offer__item-title {
    font-size: 14px;
    font-weight: bold;
    font-style: italic;
    margin-bottom: 16px;
    line-height: 1.2;
    max-width: 200px;
}

.offer__item:first-child .offer__item-title {
}

.offer__item-desc {
    font-size: 14px;
    font-weight: normal;
    font-style: italic;
    line-height: 1.2;
}

form.offer__form {
    box-shadow: 0px 0px 27px 0px rgb(0 0 0 / 9%);
    display: flex;
    flex-direction: column;
    border: 4px solid #ffbf05;
    padding: 0px 31px 40px;
}

.offer__form-desc {
    padding-bottom: 20px;
    font-size: 14px;
}

.offer__form-img {
    height: 247px;
    display: flex;
    justify-content: center;
    margin-top: -32px;
    margin-bottom: 24px;
}

input.offer__form-field {
    box-shadow: 0px 0px 27px 0px rgb(0 0 0 / 9%);
    font-size: 14px;
    color: #000;
    border-radius: 5px;
    height: 45px;
    margin-bottom: 22px;
    text-align: center;
    padding: 0 10px;
    font-family: 'Montserrat';
}

input.offer__form-field::placeholder {
    color: #000;
}

.btn.offer__form-btn {
    font-family: 'Montserrat';
    font-weight: 600;
}

section.info {
    padding-top: 93px;
}

.info__title {
    font-size: 44px;
    margin-bottom: 49px;
    font-weight: bold;
}

.info__item {
    margin-bottom: 30px;
}

.info__item-desc {
    display: none;
    font-weight: normal;
    font-style: italic;
    padding-top: 30px;
    line-height: 10px;
}

.info__item-title {
    display: flex;
    justify-content: space-between;
    cursor: pointer;
}


.info__item-title span {
    font-size: 18px;
    font-weight: bold;
}

.filler {
    border-bottom: 2px dotted #e1e1e1;
    flex-grow: 1;
    margin-bottom: 4px;
}

.info__item-open {
    margin-left: 27px;
    width: 12px;
    height: 12px;
    position: relative;
    margin-top: 7px;
}

.info__item-open:before {content: "";top: 50%;left: 0;width: 12px;height: 2px;transform: translateY(-50%);position: absolute;background-color: #000;}

.info__item-open:after {
    content: "";
    top: 0;
    left: 5px;
    width: 2px;
    height: 12px;
    position: absolute;
    background-color: #000;
    transition: .3s all;
}


.info__item-title.active .info__item-open:after {
    transform: rotate(90deg);
}

.info__item-desc span {
}

.info__item-more {
    display: block;
    font-size: 14px;
    line-height: 24px;
    padding-top: 16px;
}

.info__item-title {
    margin-bottom: 30px;
}

.info__item {
    margin-bottom: 0;
}

.info__item-desc {
    padding-bottom: 30px;
    padding-top: 0;
    line-height: 1;
}

.info__item-more {
    line-height: 1;
}
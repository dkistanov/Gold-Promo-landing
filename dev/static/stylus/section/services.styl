section.services {
    padding-top: 130px;
}
.services__title {
    text-align: center;
    font-size: 36px;
    margin: 0 0 18px;
}

.services__title span {
    display: inline-block;
}

span.text_bigger {
    font-size: 44px;
}

.services__subtitle {
    text-align: center;
    margin-bottom: 56px;
}

.services__list {
    display: flex;
    flex-wrap: wrap;
}

.services__item {
    width: 32%;
    margin-right: 2%;
    box-shadow: 0px 0px 27px 0px rgba(0, 0, 0, 0.09);
    margin-bottom: 2%;
    padding: 48px 27px 30px 27px;
    position: relative;
    min-height: 230px;
    transition: .3s all;
    outline: 5px solid transparent;
}

.services__item:nth-child(3n) {
    margin-right: 0;
}

.services__item-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 20px;
}

.services__item-desc {
    margin-bottom: 20px;
    font-size: 16px;
    font-weight: normal;
    line-height: 1.3;
}

.services__item-icon {
    position: absolute;
    right: 26px;
    bottom: 26px;
}

.services__item:before {content: "";top: 34px;left:16px;width: 42px;height: 42px;background: url(../img/content/romb.png) no-repeat;position: absolute;z-index: -1;}


.services__item:hover {
    outline-color: #ffc206;
}

.btn:hover {
    color: #fff;
    border-color: #000;
}

.btn {
    transition: .3s all;
    cursor pointer
}

.btn:active {
    transform: translate(2px, 2px);
}

.cases__promo-download.btn {
    position relative;
    overflow hidden
}
.cases__promo-download.btn:after {
    content: "";
    display: block;
    width: 30px;
    height: 300px;
    margin-left: 60px;
    background: #fff;
    position: absolute;
    left: -40px;
    top: -150px;
    z-index: 1;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    -webkit-transition: all 0.1s;
    transition: all 0.1s;
    -webkit-animation-name: slideme;
    animation-name: slideme;
    -webkit-animation-duration: 3s;
    animation-duration: 3s;
    -webkit-animation-delay: 0.05s;
    animation-delay: 0.05s;
    -webkit-animation-timing-function: ease-in-out;
    animation-timing-function: ease-in-out;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite;
}

@keyframes slideme { 0% { left: -30px; margin-left: 0px; }
  30% { left: 110%; margin-left: 80px; }
  100% { left: 110%; margin-left: 80px; } }
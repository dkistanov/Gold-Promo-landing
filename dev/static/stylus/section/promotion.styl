form.promotion__form {
    padding: 26px 30px;
    background: #fff;
    border: 4px solid #ffbf05;
    width: 384px;
    position: absolute;
}

form.promotion__form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
.promotion__form-title {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    text-transform: uppercase;
    margin-bottom: 32px;
}

.promotion__form-subtitle {


section.promotion {
  padding-top: 110px;
}

.promotion__title {
  margin: 0 0 18px;
  text-align: center;
}

span.text_yellow {
  color: #ffbf05;
}

.promotion__desc {
  font-size: 1.125rem;
  text-align: center;
  max-width: 850px;
  margin: 0 auto;
  line-height: 1.2;
  margin-bottom: 34px;
}

.promotion__select {
  display: flex;
}

.promotion__select-item {
  width 20%
  text-align: center;
}

.select-item__text {
  display: block;
  padding-bottom: 17px;
  margin-bottom: 17px;
  border-bottom: 1px solid #c6c6c6;
  font-size: 1.125rem;
  font-weight: bold;
  position relative
  transition: .3s all
  cursor pointer
}
.select-item__subtext {
    opacity: 0;
    font-size: 18px
    transition: .3s opacity;
}

.promotion__select-item.active .select-item__text {
    color: #ffbf05;

}

.promotion__select-item.active .select-item__subtext {
    opacity: 1;
}

.promotion__select {
    padding-bottom: 70px;
}

.select-item__text:after {
    content: "";
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    transition: .3s all;
    background-color: #ffbf05;
    height: 3px;
    bottom: -2px;
}

.promotion__select-item.active .select-item__text:after {
    width: 100%;
}

.promotion__item-title {
    font-size: 30px;
    margin-bottom: 15px;
}

.promition__item-example {
    margin-bottom: 23px;
    display: block;
    color: #0060ff;
    font-size: 18px;
    text-decoration: underline;
    display: none;
}

.promotion__item-desc {
    margin-top: 20px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.promotion__item-subtitle {
    margin-bottom: 18px;
    font-size: 18px;
    font-weight: bold;
    display: none;
}

.promotion__item-stages {
    max-width: 655px;
}

.promotion__item-stage {
    font-size: 16px;
    line-height: 1.4;
    margin-bottom: 5px;
}

.promotion__item {
    min-height: 320px;
    flex-direction: column;
}

.promotion__period {
    margin-top: auto;
    font-size: 16px;
    font-weight: bold;
    line-height: 30px;
    margin-top: 15px
}

.promotion__item:first-child .promotion__item-subtitle {
    display: block;
}

.promotion__item:first-child .promition__item-example {
    display: block;
}
.promotion__item:first-child .promotion__period {
    display: none
}




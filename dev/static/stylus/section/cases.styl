section.cases {
    padding-top: 90px;
}

.cases__title {
    margin: 0 0 15px;
    text-align: center;
}

.cases__title span {
    display: inline-block;
}

.cases__desc {
    margin-bottom: 30px;
    text-align: center;
}

.cases__desc span {
    display: inline-block;
    margin-bottom: 11px;
}

.cases__desc span:last-child {
    margin: 0;
}

span.text_bold {
    font-weight: bold;
}

.cases__list {position: relative;}

.cases__list {
    padding: 0px 40px 0;
}

.cases__list .slider__arrow {
    position: absolute;
    top: 50%;
    right: 0;
    transform: translateY(-50%);
}

.cases__list .slider__arrow.arrow_prev {
    left: 0;
    transform: translateY(-50%) scale(-1);
}

.cases__slider {
    padding:15px 0px 15px 15px
}
.cases__item {
    margin-right: 15px;
}

.cases__slider .slick-list {
    overflow: visible;
}

.cases__slider {
    overflow: hidden;
}


.cases__item-img {
    transition: .3s all;
    margin-bottom: 25px;
}

.cases__item:hover {transform: scale(1.05);}

.cases__item {
    transition: .3s all;
}
.cases__item-img {
    height: 400px;
    width: 100%;
    background: url(../img/content/case.jpg) no-repeat;
    background-size: cover;
    background-position: center;
}

.cases__item-title {
    font-size: 14px;
    font-weight: normal;
    line-height: 1.3;
    max-width: 275px;
}

.cases__item-title a {
    display: inline-block;
    margin-top: 29px;
}

.cases__list {
    margin-bottom: 85px;
}

.cases__promo-wrp {
    align-items: center;
    padding: 25px 52px;
    margin-bottom: 28px;
    display: flex;
    background: #1b253c;
    justify-content: space-between;
}

.cases__promo-title {
    font-size: 24px;
    font-weight: bold;
    color: #fff;
    max-width: 750px;
}

.cases__promo-download.btn {
    padding: 21px 40px;
}

.cases__promo-desc {
    padding: 0 53px;
    font-size: 16px;
    line-height: 1.2;
    text-align: justify;
}
.cases__item-title  a {
    cursor pointer    
}

.form-popup {
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 32;
    position: fixed;
    background: rgba(0,0,0,0.2);
    display none
}
form.cases__form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}
form.cases__form {
    padding: 26px 30px;
    background: #fff;
    border: 4px solid #ffbf05;
    width: 384px;
    position: absolute;
}

.cases__form-title {
    margin-bottom: 19px;
    font-size: 12.32px;
    font-weight: bold;
    line-height: 1.2;
}

.form-popup__close {
    position: absolute;
    top: -12px;
    right: -35px;
    width: 18px;
    height: 18px;
    background: url(../img/content/popup-close.png) no-repeat;
    background-size: cover;
    cursor pointer
}

form.cases__form {box-shadow: 0px 0px 27px 0px rgba(0,0,0,0.09);}

.form__field {
    box-shadow 0px 0px 27px 0px rgba(0,0,0,0.09)
    font-size: 0.875rem;
    color: #000;
    border-radius: 5px;
    height: 45px;
    margin-bottom: 12px;
    padding: 0 27px;
    font-family: 'Montserrat';
    width: 100%;
}

.form__note {
    font-size: 14px;
    line-height: 1.2;
    margin-bottom: 23px;
}

.btn.form__button {
    padding: 20px 10px;
    width: 100%;
    font-family: 'Montserrat';
    margin-bottom: 22px;
}

.form__checkbox {font-size: 12px;}

.form__checkbox input {
    display: none;
}

.form__checkbox label:before {content: "";display: inline-block;margin-right: 8px;width: 11px;background: #e7e7e7;height: 11px;border: 1px solid #a4a4a4;margin-bottom: -1px;}

.form__checkbox input:checked label {}

.form__checkbox label:after {}

.form__checkbox label {
    position: relative;
}

.form__checkbox label:after {content: "";position: absolute;left: 3px;top: 5px;width: 5px;height: 5px;background: transparent;border-radius: 50%;transition: .3s all;}

.form__checkbox input:checked+label:after {
    background: #000;
}
